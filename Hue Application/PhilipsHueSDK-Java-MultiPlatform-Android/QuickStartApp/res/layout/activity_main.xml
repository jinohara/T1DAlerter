<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PHMyApplicationActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_click_random_button" />
    
    <Button
        android:id="@+id/buttonRand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/btn_random" android:paddingLeft="10dp" android:paddingRight="10dp"/>

    <Button
        android:id="@+id/buttonVeryLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRand"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Very Low" android:paddingLeft="10dp" android:paddingRight="10dp"/>

    <Button
        android:id="@+id/buttonLow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonVeryLow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Low" android:paddingLeft="10dp" android:paddingRight="10dp"/>

    <Button
        android:id="@+id/buttonMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Medium" android:paddingLeft="10dp" android:paddingRight="10dp"/>

    <Button
        android:id="@+id/buttonHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMedium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="High" android:paddingLeft="10dp" android:paddingRight="10dp"/>

    <Button
        android:id="@+id/buttonVeryHigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonHigh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="VeryHigh" android:paddingLeft="10dp" android:paddingRight="10dp"/>

</RelativeLayout>